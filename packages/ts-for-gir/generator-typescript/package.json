{
    "name": "@ts-for-gir/generator-typescript",
    "version": "3.3.0",
    "description": "TypeScript type definition generator for ts-for-gir",
    "module": "lib/index.js",
    "main": "lib/index.js",
    "type": "module",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "pnpm lint && pnpm build:ts",
        "build:ts": "tsc",
        "clear": "pnpm clear:build",
        "clear:build": "rimraf ./lib",
        "watch": "pnpm build:ts --watch",
        "lint": "eslint . --ext .ts,.tsx --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gjsify/ts-for-gir.git"
    },
    "author": "Pascal Garber <pascal@artandcode.studio>",
    "files": [
        "lib",
        "templates",
        "packages.xml"
    ],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/gjsify/ts-for-gir/issues"
    },
    "homepage": "https://github.com/gjsify/ts-for-gir#readme",
    "keywords": [
        "generator"
    ],
    "devDependencies": {
        "@types/ejs": "3.1.5",
        "@types/node": "22.1.0",
        "@typescript-eslint/eslint-plugin": "7.4.0",
        "@typescript-eslint/parser": "7.4.0",
        "ejs": "3.1.10",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.2.1",
        "fast-xml-parser": "4.4.1",
        "prettier": "3.3.3",
        "rimraf": "6.0.1",
        "typescript": "5.2.2"
    },
    "dependencies": {
        "@ts-for-gir/generator-base": "workspace:*",
        "@ts-for-gir/lib": "workspace:*"
    }
}
