{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
